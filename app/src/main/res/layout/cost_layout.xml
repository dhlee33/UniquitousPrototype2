<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp">

    <Button
        android:id="@+id/back_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@mipmap/back_icon"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/cost_text"
        android:layout_alignStart="@+id/cost_text"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="추가비용"
        android:textSize="40dp"
        android:layout_marginTop="44dp"
        android:id="@+id/cost_text"
        android:layout_below="@+id/back_button"
        android:layout_toLeftOf="@+id/:text1"
        android:layout_toStartOf="@+id/:text1" />

    <TextView
        android:id="@+id/reward_text"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="수고비"
        android:textSize="40dp"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/cost_text"
        android:layout_toLeftOf="@+id/:text3"
        android:layout_toStartOf="@+id/:text3" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="총합"
        android:textSize="40dp"
        android:layout_marginTop="52dp"
        android:id="@+id/sum_text"
        android:layout_below="@+id/reward_text"
        android:layout_toLeftOf="@+id/:text2"
        android:layout_toStartOf="@+id/:text2" />

    <TextView
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:text=":"
        android:textSize="40dp"
        android:id="@+id/:text1"
        android:layout_alignBaseline="@+id/cost_text"
        android:layout_alignBottom="@+id/cost_text"
        android:layout_toLeftOf="@+id/cost_view"
        android:layout_toStartOf="@+id/cost_view" />

    <TextView
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:text=":"
        android:textSize="40dp"
        android:id="@+id/:text2"
        android:layout_alignBaseline="@+id/sum_text"
        android:layout_alignBottom="@+id/sum_text"
        android:layout_toLeftOf="@+id/sum_view"
        android:layout_toStartOf="@+id/sum_view" />

    <TextView
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:text=":"
        android:textSize="40dp"
        android:id="@+id/:text3"
        android:layout_alignBaseline="@+id/reward_text"
        android:layout_alignBottom="@+id/reward_text"
        android:layout_toLeftOf="@+id/reward_view"
        android:layout_toStartOf="@+id/reward_view" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/cost_view"
        android:textSize="40dp"
        android:gravity="end"
        android:layout_alignBaseline="@+id/:text1"
        android:layout_alignBottom="@+id/:text1"
        android:layout_toLeftOf="@+id/wonText1"
        android:layout_toStartOf="@+id/wonText1" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/reward_view"
        android:textSize="40dp"
        android:gravity="end"
        android:layout_alignBaseline="@+id/:text3"
        android:layout_alignBottom="@+id/:text3"
        android:layout_toLeftOf="@+id/wonText2"
        android:layout_toStartOf="@+id/wonText2" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/sum_view"
        android:textSize="40dp"
        android:gravity="end"
        android:layout_alignBaseline="@+id/:text2"
        android:layout_alignBottom="@+id/:text2"
        android:layout_toLeftOf="@+id/wonText3"
        android:layout_toStartOf="@+id/wonText3" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="원"
        android:textSize="40dp"
        android:id="@+id/wonText1"
        android:layout_alignBaseline="@+id/cost_view"
        android:layout_alignBottom="@+id/cost_view"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="원"
        android:textSize="40dp"
        android:id="@+id/wonText2"
        android:layout_alignBaseline="@+id/reward_view"
        android:layout_alignBottom="@+id/reward_view"
        android:layout_toRightOf="@+id/cost_view"
        android:layout_toEndOf="@+id/cost_view" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="원"
        android:textSize="40dp"
        android:id="@+id/wonText3"
        android:layout_alignBaseline="@+id/sum_view"
        android:layout_alignBottom="@+id/sum_view"
        android:layout_toRightOf="@+id/reward_view"
        android:layout_toEndOf="@+id/reward_view" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="확인"
        android:gravity="center"
        android:textSize="40dp"/>


</RelativeLayout>
