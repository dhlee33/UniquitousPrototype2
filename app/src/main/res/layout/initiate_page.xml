<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="69dp"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/textlines"
        android:textSize="32dp"
        android:text="로그인"
        android:gravity="center"
        android:id="@+id/login_page_button"
        android:layout_above="@+id/signup_page_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="38dp"
        android:onClick="to_login_page"/>

    <TextView
        android:layout_width="200dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:background="@drawable/textlines"
        android:textSize="32dp"
        android:text="가입하기"
        android:layout_marginBottom="38dp"
        android:layout_above="@+id/lookup_page_button"
        android:layout_alignLeft="@+id/lookup_page_button"
        android:layout_alignStart="@+id/lookup_page_button"
        android:id="@+id/signup_page_button"
        android:onClick="to_signup_page"/>

    <TextView
        android:layout_width="200dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:background="@drawable/textlines"
        android:textSize="32dp"
        android:text="구경하기"
        android:layout_marginBottom="73dp"
        android:id="@+id/lookup_page_button"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/login_page_button"
        android:layout_alignStart="@+id/login_page_button"
        android:onClick="to_lookup_page"/>

</RelativeLayout>