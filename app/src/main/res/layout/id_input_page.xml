<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="아이디를 입력해주세요."
        android:textSize="24dp"
        android:id="@+id/textView"
        android:layout_marginTop="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/id_input_edittext"
        android:layout_alignStart="@+id/id_input_edittext" />

    <EditText
        android:id="@+id/id_input_edittext"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:inputType="text"
        android:lines = "1"
        android:maxLines="1"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/textView" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/aboveline"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp">

            <Button
                android:id="@+id/accept_id_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="다음"
                android:textSize="30dp"
                android:onClick="accept_id"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit" />
        </RelativeLayout>
    </ScrollView>



</RelativeLayout>